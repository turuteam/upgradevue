// tsconfig.json
{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./client/*"],
      "@/*": ["./client/*"]
    },
    "types": ["@types/jest", "@types/node", "@nuxt/types", "@nuxtjs/axios"],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strictNullChecks": false,
  },
  "exclude": ["node_modules"]
}
